<style>
	footer {
		background: var(--surface);
		border-top: 1px solid var(--border);
		margin-top: auto;
	}
	
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--space-3xl) var(--space-lg);
	}
	
	.footer-main {
		display: grid;
		grid-template-columns: 1.5fr 1fr;
		gap: var(--space-3xl);
		margin-bottom: var(--space-3xl);
	}
	
	.footer-brand {
		max-width: 400px;
	}
	
	.footer-logo {
		display: inline-flex;
		align-items: center;
		gap: var(--space-sm);
		text-decoration: none;
		color: var(--text-primary);
		margin-bottom: var(--space-md);
	}
	
	.logo-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		background: var(--gradient-accent);
		border-radius: var(--radius-md);
		font-weight: 700;
		font-size: 0.75rem;
		letter-spacing: -0.02em;
	}
	
	.logo-text {
		font-weight: 700;
		font-size: 1rem;
		letter-spacing: -0.02em;
	}
	
	.footer-tagline {
		color: var(--text-muted);
		font-size: 0.95rem;
		line-height: 1.6;
		margin: 0;
	}
	
	.footer-links {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--space-xl);
	}
	
	.footer-column h4 {
		color: var(--text-primary);
		font-size: 0.9rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: var(--space-md);
	}
	
	.footer-column a {
		display: block;
		color: var(--text-muted);
		font-size: 0.95rem;
		text-decoration: none;
		padding: var(--space-xs) 0;
		transition: color var(--transition-fast);
	}
	
	.footer-column a:hover {
		color: var(--text-primary);
	}
	
	.footer-bottom {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding-top: var(--space-xl);
		border-top: 1px solid var(--border);
	}
	
	.copyright {
		color: var(--text-muted);
		font-size: 0.9rem;
		margin: 0;
	}
	
	.social-icons {
		display: flex;
		gap: var(--space-sm);
	}
	
	.social-icons a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		color: var(--text-muted);
		background: var(--surface-elevated);
		border-radius: var(--radius-md);
		transition: all var(--transition-fast);
	}
	
	.social-icons a:hover {
		color: var(--text-primary);
		background: var(--gray-700);
		transform: translateY(-2px);
	}
	
	.social-icons svg {
		width: 20px;
		height: 20px;
	}
	
	@media (max-width: 768px) {
		.footer-content {
			padding: var(--space-2xl) var(--space-md);
		}
		
		.footer-main {
			grid-template-columns: 1fr;
			gap: var(--space-2xl);
		}
		
		.footer-brand {
			text-align: center;
			max-width: 100%;
		}
		
		.footer-logo {
			justify-content: center;
		}
		
		.footer-links {
			justify-items: center;
			text-align: center;
		}
		
		.footer-bottom {
			flex-direction: column;
			gap: var(--space-lg);
			text-align: center;
		}
	}
</style>
