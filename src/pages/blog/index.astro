---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 100%;
				max-width: 1200px; /* Wider for grid */
				margin: auto;
				padding: 2rem 1rem;
			}
			ul {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			li {
				transition: transform 0.2s ease;
			}
			li a {
				display: flex;
				flex-direction: column;
				text-decoration: none;
				height: 100%;
				background: white;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: var(--box-shadow);
				transition: box-shadow 0.2s ease, transform 0.2s ease;
			}
			li a:hover {
				transform: translateY(-4px);
				box-shadow: var(--box-shadow-hover);
			}
			li img {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-radius: 0;
			}
			.content {
				padding: 1.5rem;
				flex: 1;
				display: flex;
				flex-direction: column;
			}
			.title {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
				font-size: 1.25rem;
				line-height: 1.4;
				font-weight: 700;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.9rem;
				margin-bottom: 0.5rem;
			}
			li a:hover .title {
				color: var(--accent);
			}
			
			/* Featured first post style if desired, or keep uniform grid */
			@media (min-width: 768px) {
				li:first-child {
					grid-column: 1 / -1;
				}
				li:first-child a {
					flex-direction: row;
					align-items: stretch;
				}
				li:first-child img {
					width: 50%;
					height: auto;
					min-height: 300px;
				}
				li:first-child .content {
					justify-content: center;
					padding: 3rem;
				}
				li:first-child .title {
					font-size: 2.5rem;
				}
			}
			
			@media (max-width: 720px) {
				ul {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}
				li:first-child a {
					flex-direction: column;
				}
				li:first-child img {
					width: 100%;
					height: 240px;
				}
				li:first-child .content {
					padding: 1.5rem;
				}
				li:first-child .title {
					font-size: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<div class="content">
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
										<h4 class="title">{post.data.title}</h4>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
