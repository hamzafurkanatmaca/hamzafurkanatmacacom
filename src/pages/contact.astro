---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Contact | Hamza Furkan Atmaca" description="Get in touch with Hamza via email or phone." />
	</head>
	<body>
		<Header />
		<main>
			<section class="contact">
				<h1>Contact</h1>
				<p>You can reach me via:</p>
				<ul>
					<li>
						<strong>Email:</strong>
						<a href="mailto:hamzafurkanatmaca@gmail.com">hamzafurkanatmaca@gmail.com</a>
					</li>
					<li>
						<strong>Phone:</strong>
						<a href="tel:+905352318884">+90 535 231 88 84</a>
					</li>
					<li>
						<p>Beylikdüzü, İstanbul</p>
					</li>
				</ul>
			</section>
		</main>
		<Footer />
		<style>
			main {
				width: 100%;
				max-width: 720px;
				margin: 0 auto;
				padding: 4rem 1rem;
			}
			.contact {
				background: white;
				padding: 2rem;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				text-align: center;
			}
			.contact h1 {
				margin-bottom: 1rem;
			}
			.contact p {
				color: rgb(var(--gray-dark));
				margin-bottom: 2rem;
			}
			.contact ul {
				list-style: none;
				padding: 0;
				margin: 0;
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}
			.contact li {
				display: flex;
				flex-direction: column;
				gap: 0.25rem;
			}
			.contact strong {
				color: rgb(var(--black));
				font-size: 0.9rem;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			.contact a {
				color: var(--accent);
				font-size: 1.1rem;
				font-weight: 500;
				text-decoration: none;
			}
			.contact a:hover {
				color: var(--accent-dark);
			}
			.contact li p {
				margin: 0;
				font-size: 1.1rem;
			}
		</style>
	</body>
</html>
